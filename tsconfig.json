{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["App/components/*"],
      "@screens/*": ["App/screens/*"],
      "@utils/*": ["App/utils/*"],
      "@api/*": ["App/api/*"],
      "@hooks/*": ["App/hooks/*"],
      "@features/*": ["App/features/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

